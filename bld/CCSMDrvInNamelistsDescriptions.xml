<?xml version="1.0"?>

<!--

	CCSMDrvInNamelistsDescriptions.xml		Aug/6/2007

	Descriptions of the component namelists for concurrent CCSM.
	Element names are for the appropriate namelist, and attributes are
	the namelist items in the given namelist. Element names give the
	type of value they contain:
		"s" = string
		"i" = integer
		"r" = floating point
		"l" = logical
        Any leftover namelist items will cause an error.

-->
<ext_ccsm_con>

<!-- List of namelist items in the clm_inparm namelist-->
<!-- any items with this keyword name will be moved to the clm_inparm namelist -->
               <!-- These should all be in LOWER CASE! -->
<clm_inparm ctitle="s" caseid="s" brnch_retain_casename="l" 
            stop_ymd ="i" start_ymd="i" start_tod="i" ref_ymd ="i"
            ref_tod="i" mss_irt="i" version="s" username="s" hostname="s"
            />

<!-- List of namelist items in the csim_inparm namelist for CSIM ice-->
<!-- any items with this keyword name will be moved to the csim_inparm namelist -->
               <!-- These should all be in LOWER CASE! -->
<prof_inparm profile_disable="l"     profile_barrier="l"      profile_single_file="l"
             profile_depth_limit="i" profile_detail_limit="i" profile_timer="i"   />

</ext_ccsm_con>
