<?xml version="1.0"?>

<!--

	DrvInNamelistsDescriptions.xml				Aug/6/2007

	Descriptions of the component namelists for sequential CCSM.
	Element names are for the appropriate namelist, and attributes are
	the namelist items in the given namelist. Element names give the
	type of value they contain:
		"s" = string
		"i" = integer
		"r" = floating point
		"l" = logical
        Any leftover namelist items will cause an error.

-->
<ccsm_seq>

<!-- List of namelist items in the ccsm_inparm namelist-->
<!-- any items with this keyword name will be moved to the ccsm_inparm namelist -->
               <!-- These should all be in LOWER CASE! -->
<ccsm_inparm case_desc="s" case_name="s" start_type="s" archive_dir="s"
             mss_irt="s" mss_wpass="i" brnch_retain_casename="l"
             restart_file="s" restart_pfile="s" restart_file_override="s"
             logfilepostfix="s" outpathroot="s"
             />

<!-- List of namelist items in the timemgr_inparm namelist-->
<!-- any items with this keyword name will be moved to the timemgr_inparm namelist -->
               <!-- These should all be in LOWER CASE! -->
<timemgr_inparm calendar="s"  stop_option="s" stop_n="i" stop_ymd ="i"
                stop_tod="i"  stop_final_ymd="i" restart_option ="s"
                restart_n="i" start_ymd="i" start_tod="i" ref_ymd ="i"
                ref_tod="i"   perpetual_run="l" perpetual_ymd ="i"
                atm_cpl_dt="i" orb_obliq="r" orb_eccen="r"
                orb_mvelp="r"  orb_iyear_ad="i" restart_file_tgroverride="s"  />

<!-- List of namelist items in the datm_dshr_in  namelist for datm7 data atmosphere -->
<!-- any items with this keyword name will be moved to the datm_dshr_in namelist -->
               <!-- These should all be in LOWER CASE! -->
<datm_dshr_in restsfile="s" restbfile="s" restpfile="s" domainfile="s" datamode="s" streams="s"/>

<!-- List of namelist items in the prof_inparm namelist for timing profile -->
<!-- any items with this keyword name will be moved to the prof_inparm  namelist -->
               <!-- These should all be in LOWER CASE! -->
<prof_inparm profile_disable="l"     profile_barrier="l"      profile_single_file="l"
             profile_depth_limit="i" profile_detail_limit="i" profile_timer="i"   />

</ccsm_seq>
