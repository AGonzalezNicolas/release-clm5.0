#!/bin/sh 
#
res="48x96"
mask="gx3v5"
cfgdir=${CLM_SCRIPTDIR}/../../bld


finidat=`$cfgdir/queryDefaultNamelist.pl -res $res -options "mask=$mask" -silent -csmdata $CSMDATA -var finidat`
fsurdat=`$cfgdir/queryDefaultNamelist.pl -res $res -silent -csmdata $CSMDATA -var fsurdat`
fndepdat=`$cfgdir/queryDefaultNamelist.pl -res $res -options "BGC=cn,SIM_YEAR=1890" -silent -csmdata $CSMDATA -var fndepdat`
fatmgrid=`$cfgdir/queryDefaultNamelist.pl -res $res -silent -csmdata $CSMDATA -var fatmgrid`
fatmlndfrc=`$cfgdir/queryDefaultNamelist.pl -res $res -options "mask=$mask" -silent -csmdata $CSMDATA -var fatmlndfrc`
frivinp_rtm=`$cfgdir/queryDefaultNamelist.pl -res $res -options "RTM=on" -silent -csmdata $CSMDATA -var frivinp_rtm`
fpftcon=`$cfgdir/queryDefaultNamelist.pl -silent -csmdata $CSMDATA -var fpftcon`
offline_atmdir=`$cfgdir/queryDefaultNamelist.pl -silent -csmdata $CSMDATA -var offline_atmdir`

cat > lnd.stdin << EOF
 &clm_inparm
 caseid         = 'clmrun'
 ctitle         = 'clmrun'
 $finidat
 $fsurdat
 $fatmgrid
 $fatmlndfrc
 $fpftcon
 $fndepdat
 $offline_atmdir
 $frivinp_rtm
 nrevsn         = "$nrevsn"
 nsrest         =  $restart_type
 nelapse        =  $run_length
 dtime          =  1800
 rtm_nsteps     =  2 
 start_ymd      =  19980101
 start_tod      =  0
 irad           = -1
 wrtdia         = .true.
 mss_irt        =  0
 hist_dov2xy    = .true.
 hist_nhtfrq    =  3
 hist_mfilt     =  1
 hist_ndens     =  1
 hist_crtinic   = 'MONTHLY'
 brnch_retain_casename = .true.
 /
 &prof_inparm
 /
EOF

