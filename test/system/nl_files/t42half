#!/bin/sh 
#
set echo
res="64x128"
land_res="360x720"
mask="USGS"
cfgdir=${CLM_SCRIPTDIR}/../../bld

fsurdat=`$cfgdir/queryDefaultNamelist.pl -res $land_res -options "mask=$mask" -silent -csmdata $CSMDATA -var fsurdat`
flndtopo=`$cfgdir/queryDefaultNamelist.pl -res $land_res -silent -csmdata $CSMDATA -var flndtopo`
fatmtopo=`$cfgdir/queryDefaultNamelist.pl -res $res  -silent -csmdata $CSMDATA -var fatmtopo`
fatmgrid=`$cfgdir/queryDefaultNamelist.pl -res $res -silent -csmdata $CSMDATA -var fatmgrid`
fatmlndfrc=`$cfgdir/queryDefaultNamelist.pl -res $res -options "mask=$mask" -silent -csmdata $CSMDATA -var fatmlndfrc`
fpftcon=`$cfgdir/queryDefaultNamelist.pl -silent -csmdata $CSMDATA -var fpftcon`
offline_atmdir=`$cfgdir/queryDefaultNamelist.pl -silent -csmdata $CSMDATA -var offline_atmdir`
frivinp_rtm=`$cfgdir/queryDefaultNamelist.pl -res $res -options "RTM=on" -silent -csmdata $CSMDATA -var frivinp_rtm`

cat > lnd.stdin << EOF
 &clm_inparm
 caseid         = 'clmrun'
 ctitle         = 'clmrun'
 finidat        = ' '
 $fsurdat
 $flndtopo
 $fatmtopo
 $fatmgrid
 $fatmlndfrc
 $frivinp_rtm
 $fpftcon
 $offline_atmdir
 nrevsn         = "$nrevsn"
 nsrest         =  $restart_type
 nelapse        =  $run_length
 dtime          =  1200
 rtm_nsteps     =  2 
 start_ymd      =  19971231
 start_tod      =  0
 irad           = -1
 wrtdia         = .true.
 mss_irt        =  0
 hist_dov2xy    = .true.
 hist_nhtfrq    =  3
 hist_mfilt     =  1
 hist_ndens     =  1
 hist_crtinic   = 'MONTHLY'
 brnch_retain_casename = .true.
 /
 &prof_inparm
 /
EOF

